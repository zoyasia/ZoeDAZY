{% extends 'base.html.twig' %}

{% block title %} Index
{% endblock %}

{% block body %}
	<h1>Index des utilisateurs</h1>


		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th>Roles</th>
					<th>Pr√©nom</th>
					<th>Nom</th>
					<th>Image</th>
					<th>Service</th>
					<th>Contrat</th>
					<th>Fin de contrat</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						<td>{{ user.firstname }}</td>
						<td>{{ user.lastname }}</td>
						<td>{{ user.picture }}</td>
						<td>{{ user.department.name }}</td>
						<td>{{ user.contractType.name }}</td>
						<td>{{ user.terminationDate ? user.terminationDate|date('d-m-y') : '' }}</td>
						<td>
							<a href="{{ path('app_crud_show', {'id': user.id}) }}">voir</a>
							<a href="{{ path('app_crud_edit', {'id': user.id}) }}">modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="8">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	<a href="{{ path('app_crud_new') }}">Create new</a>
{% endblock %}

