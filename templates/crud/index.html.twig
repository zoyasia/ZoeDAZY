{% extends 'base.html.twig' %}

{% block title %} Index
{% endblock %}

{% block body %}
	<h1>Index des utilisateurs</h1>


		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th>Roles</th>
					<th>Password</th>
					<th>Firstname</th>
					<th>Lastname</th>
					<th>Picture</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						<td>{{ user.password }}</td>
						<td>{{ user.firstname }}</td>
						<td>{{ user.lastname }}</td>
						<td>{{ user.picture }}</td>
						<td>
							<a href="{{ path('app_crud_show', {'id': user.id}) }}">show</a>
							<a href="{{ path('app_crud_edit', {'id': user.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="8">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	<a href="{{ path('app_crud_new') }}">Create new</a>
{% endblock %}

